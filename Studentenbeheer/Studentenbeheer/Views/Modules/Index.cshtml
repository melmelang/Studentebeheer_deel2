@model IEnumerable<Studentenbeheer.Models.Module>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Omschrijving)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
            <td>
                @if(User.IsInRole("Docent") || User.IsInRole("Beheerder")){
                    <a asp-controller="Inschrijvingens" asp-action="Create" asp-route-id="@item.Id" asp-route-wich="1">Inschrijven </a>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit </a> 
                }

                <a asp-action="Details" asp-route-id="@item.Id">Details </a> 
                
                @if (User.IsInRole("Docent") || User.IsInRole("Beheerder"))
                {
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
